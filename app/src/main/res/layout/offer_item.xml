<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFF">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cardView3"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offer_current_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="300"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"/>

            <TextView
                android:id="@+id/offer_old_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_strike_text"
                android:fontFamily="@font/ubuntu_light"
                android:text="440"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/offer_current_price2"
                app:layout_constraintStart_toEndOf="@+id/offer_current_price2"
                app:layout_constraintTop_toTopOf="@+id/offer_current_price2"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/taka_icon"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/offer_item_image"
                app:layout_constraintTop_toBottomOf="@+id/offer_item_title"/>

            <TextView
                android:id="@+id/offer_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_light"
                android:maxLines="2"
                android:textColor="@color/colorFont"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/offer_item_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Asus Zenbook"/>

            <ImageView
                android:id="@+id/offer_item_image"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/house"/>

            <TextView
                android:id="@+id/offer_item_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:text="10% off"
                android:textColor="@color/colorGreen"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/offer_old_price2"
                app:layout_constraintStart_toEndOf="@+id/offer_old_price2"
                app:layout_constraintTop_toBottomOf="@+id/offer_item_title"
                app:layout_constraintVertical_bias="1.0"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:text="Expires on :"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/offer_old_price2"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/offer_item_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:text="16-Dec"
                android:textColor="@color/colorFont"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>